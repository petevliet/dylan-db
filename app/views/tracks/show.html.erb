<div class="row">
  <div class="col-md-12">
    <ul class="breadcrumb">
      <li><%= link_to 'Home', root_path %></li>
      <li><%= link_to 'Albums', albums_path %></li>
      <li><em><%= link_to @track.album.title, album_path(@track.album) %></em></li>
      <li class="active"><em><%= @track.title %></em></li>
    </ul>
  </div>
</div>
<h1><em><%= @track.title %></em></h1>
<h4>
  From <em><%= link_to @track.album.title, album_path(@track.album) %></em>, <%= @album_year %>
</h4>
<div class="track-show">
</div>

  <br>
  <div class="lyrics" id="lyrics-scroll">
    <% @track.verses.each_with_index do |section, index| %>
      <div class="lyric-section" data-container="body" data-toggle="popover" data-html="true" data-placement="right" data-content="<b>Comments on section:</b> <%= @comments.where(verse: index + 1).length %><br> Click lyrics to comment">
        <%= link_to section.html_safe, new_album_track_comment_path(@track.album, @track, verse: index + 1), class: "text-primary", id: "verse", style:"text-decoration:none" %>
      </div>
    <% end %>
  </div>
  <br>
  <ul>
    <% @comments.each do |comment| %>
      <li> <%= "#{comment.annotation}, #{comment.verse}" %></li>
    <% end %>
  </ul>
