<%= form_for [@track.album, @track, @comment], html: {class: 'form-horizontal'} do |f| %>
  <div class="row">
    <div class="col-md-8 col-md-offset-1">
      <%= f.text_area :annotation, class: "form-control", placeholder: "Write your comment here..." %>
      <%= f.hidden_field :verse, value: "", id: "verseNumEntry" %>
    </div>
  </div>
  <hr>
  <%= f.submit class: "btn btn-primary" %>
  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
<% end %>
